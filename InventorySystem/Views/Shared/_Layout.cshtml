<div class="modal" id="agregarRecursos" tabindex="-1" role="dialog" aria-labelledby="FormModalLabel" aria-hidden="true" style="background: none;" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document" style="max-width: 950px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel" style="margin-top: 5px; font-size: 23px;">Ingresar Recursos</h5>
                <button type="button" class="close" data-dismiss="modal" style="font-size: 30px;">&times;</button>
            </div>
            <div class="modal-body">
                <h2>Datos</h2>
                <br />
                <label for="tipoEquipo">Equipo</label>
                <label for="marca">Marca</label>
                <label for="modelo">Modelo</label>
                <label for="serie">Serie</label>

                <br />

                <select id="customTipoEquipo" class="btn btn-light dropdown-toggle">
                    <option value="" disabled selected>Seleccione</option>
                </select>
                <select id="customMarca" class="btn btn-light dropdown-toggle">
                    <option value="" disabled selected>Seleccione</option>
                </select>
                <input type="text" maxlength="20" id="txtmodelo" />
                <input type="text" maxlength="40" id="txtserie" />

                <br /><br />

                <label for="fechaIng">Fecha de Ingreso</label>
                <label for="fechaadq">Fecha de Adquisición</label>
                <label for="descripcion">Descripción</label>
                <label for="descCorta">Descripción Corta</label>

                <br />

                <input type="date" id="txtfechaIng" />
                <input type="date" id="txtfechaAdq" />
                <input type="text" maxlength="75" id="txtdescripcion" />
                <input type="text" maxlength="50" id="txtdescripcionCorta" />

                <br /><br />

                <label for="estado">Estado</label>
                <label for="cantidad">Cantidad</label>
                <label for="licencia">Licencia</label>
                <label for="numParte">N° de Parte</label>
                <label for="observacion">Observación</label>

                <br />

                <select id="customEstado" class="btn btn-light dropdown-toggle">
                    <option value="" disabled selected>Seleccione</option>
                </select>
                <input type="number" min="1" id="txtcantidad" />
                <input type="text" maxlength="25" id="txtlicencia" />
                <input type="text" maxlength="20" id="txtnumParte" />
                <input type="text" maxlength="50" id="txtobservacion" />

                <br />

                <label for="persona">Asignado a</label>

                <br/>

                <input type="text" readonly="readonly" id="txtPersona"/>

            </div>
            <div class="modal-footer" style="position: relative;">
                <button id="btnIngresar" type="button" onclick="js_agregar_recurso_isocode();">Ingresar</button>
                <button id="btnLimpiar" type="button" onclick="js_limpiarCamposIngresar()">Limpiar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="editarRecursos" tabindex="-1" role="dialog" aria-labelledby="FormModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document" style="max-width: 950px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel" style="margin-top: 5px">Resumen de Recursos</h5>
                <button type="button" class="close" data-dismiss="modal" style="font-size: 30px;">&times;</button>
            </div>
            <div class="modal-body">
                <h5>Datos</h5>
                <label for="edittipoEquipo">Equipo</label>
                <label for="editmarca">Marca</label>
                <label for="editmodelo">Modelo</label>
                <label for="editserie">Serie</label>

                <br />

                <input type="text" id="customeditTipoEquipo" disabled="disabled" style="background-color: lightgray" />
                <input type="text" id="customeditMarca" disabled="disabled" style="background-color: lightgray" />
                <input type="text" id="txteditmodelo" disabled="disabled" style="background-color: lightgray" />
                <input type="text" id="txteditserie" disabled="disabled" style="background-color: lightgray" />

                <br /><br />

                <label for="editfechaIng">Ingreso</label>
                <label for="editfechaadq">Adquisición</label>
                <label for="editdescripcion">Descripción</label>
                <label for="editdescCorta">Desc. Corta</label>

                <br />

                <input type="text" id="txteditfechaIng" disabled="disabled" style="background-color: lightgray" />
                <input type="text" id="txteditfechaAdq" disabled="disabled" style="background-color: lightgray" />
                <input type="text" id="txteditdescripcion" disabled="disabled" style="background-color: lightgray" />
                <input type="text" id="txteditdescripcionCorta" disabled="disabled" style="background-color: lightgray" />

                <br /><br />

                <label for="editestado">Estado</label>
                <label for="editcantidad">Cantidad</label>
                <label for="editlicencia">Licencia</label>
                <label for="editnumParte">N° de Parte</label>
                <label for="editobservacion">Observación</label>

                <br />

                <select id="customeditEstado" class="btn btn-light dropdown-toggle"></select>
                <input type="number" min="1" id="txteditcantidad" disabled="disabled" style="background-color: lightgray" />
                <input type="text" id="txteditlicencia" disabled="disabled" style="background-color: lightgray" />
                <input type="text" id="txteditnumParte" disabled="disabled" style="background-color: lightgray" />
                <input type="text" maxlength="50" id="txteditobservacion" />
                
                <input type="hidden" id="txtCorrelativo" />
                <input type="hidden" id="txtEstadoOld" />
                <input type="hidden" id="txtObservacionOld" />

                <br /><br />

                <label for="hist">Historial de Estados</label>

                <br /><br />

                <div class="table-responsive-vertical syc_table">
                    <table class="table table-striped table-bordered" style="margin-bottom: 0;" id="listarHistorialRecurso">
                        <thead>
                            <tr class="table-dark">
                                <th><center>Personal</center></th>
                                <th><center>Cargo</center></th>
                                <th><center>Fecha</center></th>
                                <th><center>Estado</center></th>
                                <th><center>Observación</center></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

            </div>
            <div class="modal-footer" style="position: relative;">
                <button id="btnActualizar" type="button" onclick="js_insertar_historial(document.getElementById('txtCorrelativo').value);">Actualizar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="SuccessRecurso" tabindex="-1" role="dialog" aria-labelledby="FormModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" style="max-width: 350px; margin-top: 13%;">
